<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/editTextAd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="ad"

        android:inputType="textPersonName"
        android:outlineProvider="none"
        android:textSize="24dp" />

    <EditText
        android:id="@+id/ediTextSoyad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="soyad"
        android:inputType="textPersonName"

        android:textSize="24dp" />


    <EditText
        android:id="@+id/editTextKartLimit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="kredi kartı limiti"
        android:inputType="numberDecimal"
        android:textSize="24dp" />

    <EditText
        android:id="@+id/editTextEkPuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="ek puan"
        android:inputType="numberDecimal"
        android:textSize="24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <TextView

            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"

            android:gravity="center_horizontal|center_vertical"
            android:text="Kart Cinsi"
            android:textColor="@color/black"
            android:textSize="20dp"></TextView>

        <Spinner

            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            android:entries="@array/kartlar"
            android:gravity="fill"
            android:textSize="50dp" />

    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/shape"
        android:onClick="Button"
        android:text="Kart Oluştur" />
</LinearLayout>